<h1>Company Details</h1>

<%= link_to 'View Employees', company_employees_path(@company) %>
<%= link_to 'Update Company', edit_company_path(@company) %>
<%= link_to 'Delete Company', company_path(@company), method: :delete, data: { confirm: 'Are you sure?' } %>


<p>Name: <%= @company.name %></p>
<p>Market Value: <%= @company.market_value %></p>
<p>Active: <%= @company.active %></p>
<p>Created At: <%= @company.created_at %></p>
<h2>Employee Count: <%= @company.employees.count %></h2>
